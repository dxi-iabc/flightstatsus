{
  "name": "flight-chain-api",
  "version": "0.0.0",
  "description": "REST API Interface to Flight Chain chaincode",
  "author": "IBS DXI",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:SWAGGER_DOCS": "LISTEN_PORT=3001 IDENTITY=SWAGGER_DOCS nodemon",
    "start:lgw-local": "NODE_HEAPDUMP_OPTIONS=nosignal LISTENING_PORT=3001 IDENTITY=FlightChainLGW USE_IBS_TEST_FABRIC_NETWORK=true USER_TOKENS='[{\"user\": \"localtester\", \"token\": \"MYTOKEN\"}]' nodemon ",
    "start:ba": "NODE_HEAPDUMP_OPTIONS=nosignal LISTENING_PORT=3000 IDENTITY=FlightChainBA nodemon",
    "start:lhr": "NODE_HEAPDUMP_OPTIONS=nosignal LISTENING_PORT=3001 IDENTITY=FlightChainLHR nodemon",
    "start:mia": "NODE_HEAPDUMP_OPTIONS=nosignal LISTENING_PORT=3002 IDENTITY=FlightChainMIA nodemon",
    "start:gva": "NODE_HEAPDUMP_OPTIONS=nosignal LISTENING_PORT=3003 IDENTITY=FlightChainGVA nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:prod1": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nest-middlewares/morgan": "^5.1.1",
    "@nestjs/common": "^5.5.0",
    "@nestjs/core": "^5.5.0",
    "@nestjs/jwt": "^6.1.2",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^6.3.4",
    "@types/lodash-es": "^4.17.3",
    "@types/socket.io": "^2.1.4",
    "appmetrics": "^4.0.0",
    "appmetrics-dash": "^4.0.0",
    "asn1js": "^2.0.21",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "deepmerge": "^2.1.1",
    "dotenv": "^6.0.0",
    "express": "^4.17.1",
    "fabric-ca-client": "~1.4.0",
    "fabric-client": "^1.3.0",
    "fabric-network": "~1.4.0",
    "fastify-formbody": "^2.0.0",
    "flat": "^4.1.0",
    "grpc": "^1.13.0",
    "handlebars": "^4.5.3",
    "js-yaml": "^3.13.1",
    "json-diff": "^0.5.4",
    "jsondiffpatch": "^0.4.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "lodash-es": "^4.17.15",
    "move-file": "^2.0.0",
    "mysql": "^2.18.1",
    "node-cache": "^5.1.0",
    "nyc": "^15.0.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.5.5",
    "socket.io": "^2.3.0",
    "sql": "^0.78.0",
    "typeorm": "^0.2.24",
    "typescript": "^2.6.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.5.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "jest": "^21.2.1",
    "json-schema-to-typescript": "^5.5.0",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
